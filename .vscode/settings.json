{
    "terminal.integrated.fontFamily": "\"'Agave, Bold'\"",
    "editor.fontFamily": "\"'Agave, Bold'\"",
    "editor.fontLigatures": true,
    "editor.tokenColorCustomizations": {

        "[*Light*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#000"
                    }
                }
            ]
        },
        "[*Dark*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#fff"
                    }
                }
            ]
        }
    },
    "editor.fontVariations": false
}